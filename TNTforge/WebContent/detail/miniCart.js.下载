$(function(){initMiniCart();$("header.header .events-minicart .minicart-box .mincart-delBtn").live("tap",function(){var f=$(this).attr("shopLineId");var c=$(".pc-cart").text().replace(/\s|,|\(|,|\)/g,"");var e=$(this).parent().parent().find(".mincart-num span").text().replace(/\s/g,"");var a=$(".mincart-total span").eq(1).text().replace(/\s|,|¥/g,"");var b=$(this).parent().parent().find("span.mincart-price").text().replace(/\s|,|¥/g,"");var d=$.spice.syncXhrPost(_contextPath+"/shoppingcart/delete",{shoppingcartLineId:f});if(d.result){$(this).closest("li").remove();if((c-e)!=0||(c-e)!="0"){$(".pc-cart").text("("+(c-e)+")");$(".events-mobMinicart .shop-num").text("("+(c-e)+")")}else{if((c-e)==0||(c-e)=="0"){$(".pc-cart").text("");$(".events-mobMinicart .shop-num").text("")}}if($("#view-scroll-wrap li").length>=3){$(".mincart-content .tinyscrollbar").removeClass("no-scroll-scrollbar")}else{if($("#view-scroll-wrap li").length<3){$(".mincart-content .tinyscrollbar").addClass("no-scroll-scrollbar")}}$(".mincart-head p span").text(c-e);$(".mincart-title div span").text("("+(c-e)+")");$(".mincart-total span").eq(1).text("¥"+formatMoney(a-b));if((a-b)<=0){$("header.header .mincart-total").addClass("none");$("header.header #cart-checkcart").addClass("none")}_gsq.push(["T","GWD-002994","trackEvent","Top-drop-down","Remove-in-cart",$(this).attr("itemCode")])}else{}})});function initMiniCart(){var b=$.spice.syncXhrGet(_contextPath+"/miniShoppingcartAjax");$(".events-minicart").html(b);var a=$(".mincart-head p span").text().replace(/\s/g,"");if(a!=0||a!="0"){$(".events-mobMinicart .shop-num").text("("+(a)+")")}else{if(a==0||a=="0"){$(".events-mobMinicart .shop-num").text("")}}if($("#view-scroll-wrap li").length>=3){$(".mincart-content .tinyscrollbar").removeClass("no-scroll-scrollbar")}else{if($("#view-scroll-wrap li").length<3){$(".mincart-content .tinyscrollbar").addClass("no-scroll-scrollbar")}}}function showMiniCart(){var b=$.spice.syncXhrGet(_contextPath+"/miniShoppingcartAjax");$(".events-minicart").html(b);var a=$(".pc-cart").text().replace(/\s|,|\(|,|\)/g,"");if(a!=0||a!="0"){$(".events-mobMinicart .shop-num").text("("+(a)+")")}else{if(a==0||a=="0"){$(".events-mobMinicart .shop-num").text("")}}if($("#view-scroll-wrap li").length>=3){$(".mincart-content .tinyscrollbar").removeClass("no-scroll-scrollbar")}else{if($("#view-scroll-wrap li").length<3){$(".mincart-content .tinyscrollbar").addClass("no-scroll-scrollbar")}}$(".events-minicart").mouseenter();setTimeout(function(){$(".events-minicart").mouseleave()},2000)}function initHeaderNotice(){var c=document.cookie.split(";");for(var a=0;a<c.length;a++){var d=c[a].split("=")[0].trim();if("mk_is_first_coming"==d){var b=c[a].split("=")[1].trim();if("-1"==b){$("#wrapper").addClass("notic-closed")}else{$("#wrapper").removeClass("notic-closed")}}}}function formatMoney(c){c=parseFloat((c+"").replace(/[^\d\.-]/g,"")).toFixed(2)+"";var a=c.split(".")[0].split("").reverse(),d=c.split(".")[1];t="";for(var b=0;b<a.length;b++){t+=a[b]+((b+1)%3==0&&(b+1)!=a.length?",":"")}return t.split("").reverse().join("")+"."+d};